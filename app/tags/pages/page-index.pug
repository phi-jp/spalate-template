          div.m16(data-is='item-chat', each='{item in items}', item='{item}')
    module-tabbar

  script.
    this.fetch = async ({app, modules}) => {
      console.log('fetch');
      if (this.posts) return {};
      var posts = await modules.app.ref.child('posts').get();
      return {
        posts: posts.splice(0, 10),
      };
    };

    this.on('mount', async () => {
      this.items = await flarestore.db.collection('groups').orderBy('created_at', 'desc').getWithRelation();
      this.update();
    });
    
